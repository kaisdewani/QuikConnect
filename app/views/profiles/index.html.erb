<% if @profile.first_name.nil? %>
  <%= link_to "Add New Profile", new_profiles_path %>
<% end %>

<div class="container">
<div class="row" >
  <div class="col-md">  
    <div class="card card-profile text-center">
      <h1 class="home-title">Quik Connect</h1>
      <img alt="" class="card-img-top" src="https://www.billboardsin.com/app/uploads/2018/04/Scranton-PA.jpg">
      
      <div class="card-block">
        <img alt="" class="card-img-profile text-center" src="https://theofficeanalytics.files.wordpress.com/2017/11/ryan-2.jpg?w=230">
        <h4 class="card-title">
          <div class= "users-name"> Ryan Howard</div>
            <small>Front-end developer</small>  
          </div>
        </h4>
        <div class="card-body">
          <%= render "message_form", message: @message %>
          <br>
          <br>      
          <%= render "email_form", message: @message %>    
        </div>
      </div>  
    </div>
  </div>
</div>
</div>












